<h5><%= @user.nickname %>さんの会員情報詳細</h5>
<%= render "layouts/error_messages", obj: @user %>

<h5><%= image_tag @user.get_profile_image %></h5>

<h5>会員ＩＤ</h5>
<h5><%= @user.id %></h5>

<h5>ニックネーム</h5>
<h5><%= @user.nickname %></h5>

<h5>生年月日</h5>
<h5><%= @user.birthdate %></h5>

<h5>性別</h5>
<h5><%= @user.gender %></h5>

<h5>メールアドレス</h5>
<h5><%= @user.email %></h5>

<h5>自己紹介文</h5>
<h5><%= @user.introduction %></h5>

<h5>会員ステータス</h5>
<% if @user.is_active? %>
<span class='text-success'>有効</span>
<% else %>
<span class='text-secondary'>退会</span>
<% end %>
<%= link_to '一覧に戻る', admin_users_path, class: "btn btn-warning" %>
<%= link_to '編集', edit_admin_user_path(@user.id), class: "btn btn-info" %>
