<div class="container my-4 pb-5">
  <div class="row">
    <h5 class="style-title"><%= @user.nickname %>さんの会員情報詳細</h5>
  </div>

  <div class="row text-left my-3 ml-3">
      <%= image_tag @user.get_profile_image, size: "200x150", class: "custom-border" %>
    <div class="col offset-3">
      <div class="row my-2">
        <div class="col">
          <h5>会員ＩＤ</h5>
        </div>
        <div class="col">
          <h5><%= @user.id %></h5>
        </div>
      </div>

      <div class="row my-2">
        <div class="col">
          <h5>ニックネーム</h5>
        </div>
        <div class="col">
          <h5><%= @user.nickname %></h5>
        </div>
      </div>

      <div class="row my-2">
        <div class="col">
          <h5>生年月日</h5>
        </div>
        <div class="col">
          <h5><%= @user.birthdate %></h5>
        </div>
      </div>

      <div class="row my-2">
        <div class="col">
          <h5>性別</h5>
        </div>
        <div class="col">
          <h5><%= @user.gender_i18n %></h5>
        </div>
      </div>

      <div class="row my-2">
        <div class="col">
          <h5>メールアドレス</h5>
        </div>
        <div class="col">
          <h5><%= @user.email %></h5>
        </div>
      </div>

      <div class="row my-2">
        <div class="col">
          <h5>自己紹介文</h5>
        </div>
        <div class="col">
          <h5><%= @user.introduction %></h5>
        </div>
      </div>

      <div class="row my-2">
        <div class="col">
          <h5>会員ステータス</h5>
        </div>
        <div class="col">
          <% if @user.is_active? %>
            <span class='text-success'>有効</span>
          <% else %>
            <span class='text-secondary'>退会</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row my-4">
    <div class="col">
      <%= link_to '一覧に戻る', admin_users_path, class: "btn text-white admin-style-user-show01" %>
    </div>
    <div class="col">
      <%= link_to '編集', edit_admin_user_path(@user.id), class: "btn text-white admin-style-user-show02" %>
    </div>
  </div>
</div>