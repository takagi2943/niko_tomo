<!--会員の投稿詳細画面-->
<div class="container my-4 pb-5">
  <div class="row">
    <h5 class="style-title"><%= @user.nickname %>さんの投稿詳細一覧</h5>
  </div>

  <!--音楽共有投稿-->
  <% if @music_posts.any? %>
    <div class="row mt-5">
      <h5 class="style-title">音楽共有投稿</h5>
    </div>

    <div class="row custom-background">
      <div class="col-3 mt-2">
        <h5>タイトル</h5>
      </div>
      <div class="col text-left mr-2 mt-2">
        <h5>投稿文</h5>
      </div>
      <div class="col-2 text-left mr-2 mt-2">
        <h5>投稿日時</h5>
      </div>
      <div class="col-2 text-left mr-2"></div>
    </div>

    <% @music_posts.each do |music_post| %>
    <div class="row custom-table-striped border border-danger">
      <div class="col-3 text-center mt-2">
        <%= link_to music_post.title, admin_music_post_path(music_post.id), class: "style-color" %>
      </div>
      <div class="col text-left mt-2">
        <%= music_post.body %>
      </div>
      <div class="col-2 mt-2 text-left mr-2">
        <%= music_post.created_at.strftime('%Y/%m/%d') %>
      </div>
      <div class="col-2 mt-2 text-left mr-2">
        <h5><%= link_to "投稿を削除", admin_music_post_path(music_post.id), method: :delete, class: "btn btn-danger", data: { confirm: "本当に削除しますか？" }, remote: true %></h5>
      </div>
    </div>
      <% end %>
  <% end %>

  <!--探究室投稿-->
  <% if @labos.any? %>
    <div class="row mt-5">
        <h5 class="style-title">探究室投稿</h5>
    </div>

    <div class="row custom-background">
      <div class="col-3">
        <h5>タグ</h5>
      </div>
      <div class="col text-left mr-2">
        <h5>本文</h5>
      </div>
      <div class="col-2 text-left mr-2">
        <h5>投稿日時</h5>
      </div>
      <div class="col-2 text-left mr-2"></div>
    </div>

    <% @labos.each do |labo| %>
    <div class="row custom-table-striped border border-danger">
      <div class="col-3 text-center mt-2">
      <%#= f.check_box :body %>
      <% labo.tags.each do |tag| %>
        <%= tag.title %>
      <% end %>
      </div>
      <div class="col text-left mt-2 my-2">
        <%= link_to labo.body, admin_labo_path(labo.id), class: "style-color" %>
      </div>
      <div class="col-2 my-2 text-left mr-2 ">
        <%=  labo.created_at.strftime('%Y/%m/%d') %>
      </div>
      <div class="col-2 mt-2 text-left mr-2">
        <%= link_to "投稿を削除", admin_labo_path(labo.id), method: :delete, class: "btn btn-danger mt-2", data: { confirm: "本当に削除しますか？" }, remote: true %>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
