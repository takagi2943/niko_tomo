<!--タグ編集失敗時フラッシュメッセージを表示-->
<% if flash[:notice].present? && flash[:notice] == "編集内容を確認してください"%>
<div class="alert alert-danger">
 <%= flash[:notice] %>
</div>
<% end %>

<h5>タグ編集</h5>
<div>
  <%= form_with model: @tag, usl: admin_tag_path, local: true do |f| %>
  <%= f.text_field :title, placeholder:"タグ名" %>
  <%= f.submit "変更を保存", class: "btn btn-success" %>
  <% end %>
</div>