<div class="container">
  <h5>会員ID:<%= @user.id %> <%= @user.nickname %> さんの探究室投稿内容</h5>
  
  <div class="row">
    <div class="col-md-2 offset-md-5">
      <%= image_tag @user.get_profile_image, class: "img-fluid" %>
      <%= @tag.title %>
      <%= @labo.body %>
      <%= link_to "投稿削除", admin_labo_path(@labo.id), method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
  
  <div class="row mt-4">
    <div class="col-md-8 offset-md-2">

            <div>nickname</div>
            <div>comment</div>
            <div></div>
          </div>
          <% @labo_comments.each do |labo_comment| %>
            <div>
              <div><%= image_tag labo_comment.user.get_profile_image, class: "rounded-circle", size: "50x50"%></div>
              <div><%= link_to labo_comment.user.nickname, admin_user_paht(labo_comment.user) %></div>
              <div><%= labo_comment.comment %></div>
              <div><%= link_to "コメント削除", admin_labo_labo_comment_paht(labo_comment.labo, labo_comment), method: :delete, class: "btn btn-danger" %></div>
            </div>
          <% end %>
    </div>
  </div>
</div>