<div class="container">
  <h5>会員ID:<%= @user.id %> <%= @user.nickname %> さんの探究室投稿内容</h5>
  
  <div class="row">
    <div class="col-md-2 offset-md-5">
      <%= image_tag @user.get_profile_image, class: "img-fluid" %>
    </div>
  </div>
  
  <div class="row mt-4">
    <div class="col-md-8 offset-md-2">
      <table class="table table-bordared">
        <thead>
          <tr>
            <th></th>
            <th>nickname</th>
            <th>comment</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @labo_comments.each do |labo_comment| %>
            <tr>
              <td><%= image_tag labo_comment.user.get_profile_image, class: "rounded-circle", size: "50x50"%></td>
              <td><%= link_to labo_comment.user.nickname, admin_user_path(labo_comment.user) %></td>
              <td><%= labo_comment.comment %></td>
              <td><%= link_to "destroy", admin_labo_labo_comment_path(labo_comment.labo, labo_comment), method: :delete, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>