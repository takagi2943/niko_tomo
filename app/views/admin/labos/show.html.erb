<!--探究室の投稿詳細-->
<div class="container">
  <div class="row justify-content-start mb-3">
    <h5 style="border-bottom: 2px solid #F07C81; color: #000000; font-size: 24px; font-weight: bold;">会員ID:<%= @user.id %> <%= @user.nickname %> さんの探究室投稿内容</h5>
  </div>

  <div class="row custom-background">
    <div class="col-2"></div>
    <div class="col-4 text-left">
      <h5>タグ</h5>
    </div>
    <div class="col text-left">
      <h5>質問内容</h5>
    </div>
  </div>

  <div class="row d-flex align-items-center justify-content-centerborder border border-danger">
    <div class="col-2 my-3">
      <%= image_tag @user.get_profile_image, class: "rounded-circle", size:'100x100' %>
    </div>
    <div class="col-4 text-left">
      <%= @tag.title %>
    </div>
    <div class="col text-left">
      <%= @labo.body %>
    </div>
  </div>
  <div class="row">
    <div class="col offset-8 mb-3">
      <%= link_to "投稿削除", admin_labo_path(@labo.id), method: :delete, class: "btn btn-danger" %>
    </div>
  </div>


  <div class="row justify-content-start my-4">
    <h5 style="border-bottom: 2px solid #F07C81; color: #000000; font-size: 24px; font-weight: bold;">投稿のコメント</h5>
  </div>
  <div class="row mt-2 custom-background">
    <div class="col-2"></div>
    <div class="col text-center mt-1">
      <h5>コメント</h5>
    </div>
    <div class="col-2 mt-1" style="display: block;">
      <h5>回答者</h5>
    </div>
  </div>

  <div class="row d-flex align-items-center justify-content-centerborder border border-danger">
  <% @labo_comments.each do |labo_comment| %>
    <div class="row">
      <div class="col-2 text-left ml-2 d-flex align-items-center">
        <%= link_to "コメント削除", admin_labo_labo_comment_path(labo_comment.labo, labo_comment), method: :delete, class: "btn btn-danger" %>
      </div>
      <div class="col text-left d-flex align-items-center">
        <%= labo_comment.comment %>
      </div>
      <div class="col-2 text-right d-flex align-items-center mr-2 my-3">
        <%= image_tag labo_comment.user.get_profile_image, class: "rounded-circle", size: "50x50" %>
        <div>
          <%= link_to labo_comment.user.nickname, admin_user_path(labo_comment.user) %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>