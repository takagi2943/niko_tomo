<!--探究室一覧-->
<div class="container">
  <div class="row  justify-content-start mb-2">
    <h5 style="border-bottom: 2px solid #F07C81; color: #000000; font-size: 24px; font-weight: bold;">探究室一覧</h5>
  </div>
  <div class="row custom-background">
    <div class="col-2">
      <h5>日付</h5>
    </div>
    <div class="col-4 text-left">
      <h5>タグ</h5>
    </div>
    <div class="col text-left">
      <h5>投稿文</h5>
    </div>
  </div>

  <% @labos.each do |labo| %>
  <div class="row custom-table-striped border border-danger">
    <div class="col-2 text-center mt-2">
      <h5><%= labo.created_at.strftime('%Y/%m/%d') %></h5>
    </div>
    <div class="col-4 text-left">
    <% labo.tags.each do |tag| %>
      <%= tag.title %><br>
    <% end %>
    </div>
    <div class="col text-left mt-2">
      <h5><%= link_to labo.body, admin_labo_path(labo.id) %></h5>
    </div>
  </div>
  <% end %>
  <%#= paginate @labo_pages %>
</div>