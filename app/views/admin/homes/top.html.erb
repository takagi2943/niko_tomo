<div class="container my-4 pb-5">
  <div class="admin-top">
    <div class="row mt-2">
      <div class="col">
        <div class="col mb-5">
          <div class="row">
            <div class="col text-right align-bottom">
              <h5 class="admin-title">サイト利用者数</h5>
            </div>
            <div class="col text-left align-bottom">
              <h5 class="admin-color">計 :<%= @total_users %>人</h5>
            </div>
          </div>

          <div class="row">
            <div class="col text-right align-bottom">
              <h5 class="admin-title">登録している人</h5>
            </div>
            <div class="col text-left align-bottom">
              <h5 class="admin-color">計 :<%= @total_active_users %>人</h5>
            </div>
          </div>
          <div class="row">
            <div class="col text-right align-bottom">
              <h5 class="admin-title">退会した人</h5>
            </div>
            <div class="col text-left align-bottom">
              <h5 class="admin-color">計 :<%= @total_inactive_users %>人</h5>
            </div>
          </div>

          <div class="row mt-3 custom-background">
            <div class="col mt-2 text-left align-bottom">
              <h5>新規グループ名</h5>
            </div>
          </div>
          <% @groups.each do |group| %>
          <div class="row custom-table-striped border border-danger">
            <div class="col-4 text-left my-2">
              <h5><%= link_to group.name, admin_group_path(group.id), class: "style-color" %></h5>
            </div>
            <div class="col mt-2 text-left">
              <%= group.body %>
            </div>
          </div>
          <% end %>
          <div class="row mt-4 custom-background">
            <div class="col-4 mt-2 align-bottom text-left">
              <h5>音楽共有の新規投稿</h5>
            </div>
          </div>
          <% @music_posts.each do |music_post| %>
          <div class="row custom-table-striped border border-danger">
            <div class="col-4 my-2 text-left align-middle">
              <%= link_to music_post.title, admin_music_post_path(music_post.id), class: "style-color" %>
            </div>
            <div class="col my-2 text-left">
              <%= music_post.body %>
            </div>
          </div>
          <% end %>
          <div class="row mt-4 custom-background">
            <div class="col mt-2 text-left">
              <h5>探究室の新規投稿</h5>
            </div>
          </div>
          <% @labos.each do |labo| %>
            <div class="row custom-table-striped border border-danger">
              <div class="col text-left my-2">
                <%= link_to labo.body, admin_labo_path(labo.id), class: "style-color" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>