<!--管理者側が登録したタグがすべて表示される-->
<h5>タグ</h5>
<% tags.each do |tag| %>
   <%= link_to tag.title, labos_tag_path(tag.id) %>
<% end %>


<!--ログインユーザーならば投稿フォームが表示-->
<% if current_user && current_user.user_status == "有効" %>
  <h5>投稿フォーム</h5>
  <%= form_with model: labo, local: true do |f| %>
    <%= f.collection_check_boxes(:tag_ids, tags, :id, :title) do |b| %>
      <%= b.label { b.check_box + b.text } %>
    <% end %>
    <%= f.text_field :body, class: 'form-control title', placeholder: "投稿文" %>
    <%= f.submit "変更を保存", class: "btn btn-outline-secondary mb-,2 mx-5" %>
  <% end %>
<% end %>
