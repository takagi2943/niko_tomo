<!--登録した画像表示-->
<div class="row">
  <div class="col text-center">
    <%= image_tag user.get_profile_image, size: '150x150' %>
  </div>
</div>
<hr/>
<div class="row ml-2 my-2">
  ニックネーム
</div>

<div class="row">
  <div class="col text-center">
    <!--ニックネーム-->
    <h4><%= link_to user.nickname, user_path(user.id), class: "custom-link-style" %></h4>
  </div>
</div>
<hr/>
<% if current_user.introduction.present? %>
<div class="row ml-2 my-3">
  <div class="col text-left">
    <!--自己紹介文表示-->
    <%= user.introduction %>
  </div>
</div>
<hr/>
<% end %>
<% if current_user %>
<div class="row my-2">
  <div class="col text-left">
    <h5>フォロー:　</h5>
  </div>
  <div class="col text-center">
    <h5><%= link_to current_user.followings.size, followings_user_path(current_user), style: "color: black;" %></h5>
  </div>
</div>
<hr/>
<div class="row my-2">
  <div class="col text-left">
    <h5>フォロワー:　</h5>
  </div>
  <div class="col text-center">
    <h5><%= link_to current_user.followers.size, followers_user_path(current_user), style: "color: black;" %></h5>
  </div>
</div>
<hr/>
<% end %>

