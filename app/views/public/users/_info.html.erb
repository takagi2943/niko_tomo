<!--  <div class="col">-->
    <!--<h5>いいね <%#= link_to "#{user.music_post_favorites.si}", user_music_post_favorites_path(user) %></h5>-->
<!--  </div>-->
<!--</div>-->

<div class="row">
  <div class="col">
    <!--current_user が user と異なる場合にはフォロー/フォロワー関連のボタンを表示-->
    <% if current_user != user %>
      <%= render "public/relationships/btn", user: user %>
    <% else %>
    <!--同じ場合にはユーザーの編集リンクを表示-->
      <%= link_to edit_user_path(user), class: "btn w-75", style: "background-color: #F5765F;" do %>
        <i class="fas fa-user-cog" style="color: #ffffff;"></i>
      <% end %>
    <% end %>
  </div>
</div>