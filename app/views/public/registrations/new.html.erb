<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-9">
      <div class="d-flex justify-content-between align-items-center">
        <h2 class="public-common-heading" data-text-en="Sign up">新規会員登録</h2>
      </div>
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <%= form_with model: @user, url: user_registration_path do |form| %>
            <%= render "public/shared/error_messages", resource: @resource %>
            <%= render "public/user/form_tag_helpers", form: @form %>
            <div class="form-row align-items-center mb-2">
              <%= form.label :password do %>
                パスワード<%= "(#{@minimum_password_length}文字以上)" if @minimum_password_length %>
              <% end %>
              <%= form.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>
            <div class="form-row align-items-center mb-2">
              <%= form.label :password_confirmation, "パスワード(確認用)" %>
              <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
            <div class="form-row mt-4">
              <%= form.submit "新規登録", class: "btn btn-success btn-lg btn-block" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer">
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>