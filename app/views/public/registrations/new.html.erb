<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2 class="mt-5">新規登録</h2>
      <h6 class="mt-3">※登録をすると投稿やグループに参加することができるようになります</h6>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <!--ニックネーム-->
        <div class="field">
          <%= f.label "ニックネーム" %>
          <%= f.text_field :nickname, autofocus: true, autocomplete: "呼び名を記入してください" %>
        </div>

        <!-- 生年月日空欄でも可 -->
        <div class="field">
          <%#= f.label "生年月日" %>
          <%#= f.date_select :birthdate%>
        </div>

        <!-- 性別選択 -->
        <div class="field">
          <%= f.label "性別" %>
          <%= f.select :gender, User.genders_i18n.keys.map { |k| [User.genders_i18n[k], k]} %>
        </div>

        <!-- メールアドレス -->
        <div class="field">
          <%= f.label "email" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <!-- パスワード -->
        <div class="form-row align-items-center mb-2">
          <%= f.label :password do %>
            パスワード<%= "(#{@minimum_password_length}文字以上)" if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "mb-2 mx-5" %>
        </div>

        <div class="form-row align-items-center mb-2">
          <%= f.label :password_confirmation, "パスワード(確認用)" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mb-2 mx-5" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-outline-success mb-2"  %>
        </div>
      <% end %>

      <h3 class="mt-5 mb-2">既に登録済みの方</h3>
      <p><%= link_to "こちら", new_user_session_path %>　からログインしてください。</p>
    </div>
  </div>
</div>
