<h2>新規登録</h2>
<h4>※登録をすると投稿やグループに参加することができるようになります</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
  <!--ニックネーム-->
  <div class="field">
    <%= f.label "ニックネーム" %>
    <%= f.nickname_field :nickname, autofocus: true, autocomplete: "呼び名を記入してください" %>
  </div>
  <!--生年月日空欄でも可-->
  <div class="field">
    <%= f.label "生年月日" %>
    <%= f.birthdate_field :birthdate, autocomplete: "19800112" %>
  </div>
  <!--性別選択-->
  <div class="field">
    <%= f.label "gender" %>
    <%= f.select :gender, ["回答しない", "その他", "男性", "女性"] %>
  </div>
  <!--メールアドレス-->
  <div class="field">
    <%= f.label "email" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <!--パスワード-->
  <div class="form-row align-items-center mb-2">
    <%= form.label :password do %>
      パスワード<%= "(#{@minimum_password_length}文字以上)" if @minimum_password_length %>
    <% end %>
    <%= form.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>
  <div class="form-row align-items-center mb-2">
    <%= form.label :password_confirmation, "パスワード(確認用)" %>
    <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>
  <div class="form-row mt-4">
    <%= form.submit "新規登録", class: "btn btn-success btn-lg btn-block" %>
  </div>

<% end %>
