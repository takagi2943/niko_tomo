<%= render 'layouts/error_messages', obj: group %>
<%= form_with model: group, local: true do |f| %>

  <div class="form-group">
    <%= f.file_field :get_group_image, class: "form-control-file" , accept: "image/*" %>
  </div>

  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: "グループ名" %>
  </div>

  <div class="form-group">
    <%= f.text_area :body, class: 'form-control', placeholder: "紹介文" %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-info' %>
    <%= link_to "グループを解散させる", group_path(group.id), method: :delete, class: "btn btn-danger", deta: { confirm:"本当にグループを解散させますか？"} %>
  </div>
<% end %>