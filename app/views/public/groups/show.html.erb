
  <div><%= image_tag get_group_image, size:'100x100' %></div>
  <div><%= @group.name %></div>
	  <div><%= @user.body %></div>
<h4>参加者人数　<%= group_user(@user.id).size %></h4>
<h4>グループ主　<%= current_user(@user.id)%></h4>

<div class='row'>
  <% if current_user != @user %>
    <td><%= render "public/relationships/btn", user: @user %></td>
  <% else %>
    <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block edit_user_#{@user.id}" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>ユーザー情報</h2>
      <%= render 'public/users/info', user: @user %>
      <h2 class="mt-3"></h2>
      <%= render 'music_posts/form', music_post: @music_post %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>グループ一覧</h2>
      <%= render 'index', groups: @groups %>
    </div>
  </div>
</div>
