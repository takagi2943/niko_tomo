    <div class='col-md-3'>
      <%= render 'public/users/info', user: @user %>
      <div class="row my-3">
       <h5 style="display: inline-block; border-bottom: 2px solid #F07C81; color: #000000; font-weight: bold;">グループ新規作成</h5>
      </div>
      <%= render 'form', group: @group %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <div class="row mt-4 mb-2">
          <div style="display: inline-block; border-bottom: 2px solid #F07C81; color: #000000; font-size: 24px; font-weight: bold;">グループ一覧</div>
        </div>
        <%= render 'index', groups: @groups %>
      </div>
  </div><!--row end-->
</div>
