<%= form_with model: music_post, local: true do |f| %>
  <%= render 'layouts/error_messages', obj: music_post %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control title' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control body' %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :i, class: "form-control-file user_image", accept: 'image/*' %>
  </div>

  <div class="form-group">
    <%= f.submit '投稿', class: 'btn btn-success' %>
  </div>

<% end %>