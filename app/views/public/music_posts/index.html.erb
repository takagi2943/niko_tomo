<div class="container-fluid">
  <div class="row">
    <div class="col">

      <div class="row ml-2 my-2">
        <h4>会員情報</h4>
      </div>

      <div class="row">
        <div class="col">
          <%= render "public/users/info", user: current_user %>
        </div>
      </div>

      <div class="row">
        <h4 class="mt-3 ml-2">新規投稿</h4>
      </div>

      <div class="row">
        <div class="col">
          <%= render "form", music_post: @music_post %>
        </div>
      </div>
    </div>


    <div class="col-md-8 offset-md-1">
      <%= render "public/music_posts/index", music_posts: @music_posts %>
    </div>
  </div>
<!--ページネーション部分-->
  <div class="row justify-content-center mb-3">
    <%= paginate @music_posts, theme: "twitter-bootstrap-4"  %>
  </div>
</div>
