<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h4>会員情報</h4>
      <%= render 'public/users/info', user: current_user %>
      <h4 class="mt-3">新規投稿</h4>
      <%= render 'form', music_post: @music_post %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <%= render 'public/music_posts/index', music_posts: @music_posts %>
    </div>

    <!-- お気に入りボタン -->
    <% @music_posts.each do |music_post| %>
      <div id="favorite_btn_<%= music_post.id %>">
        <%= render partial: 'public/favorites/btn', locals: { current_user: current_user, music_post: music_post } %>
      </div>
    <% end %>


    <div id="comment_counter">
      <%= render "public/music_post_comments/counter", music_post: @music_post %>
    </div>
  </div>
</div>
