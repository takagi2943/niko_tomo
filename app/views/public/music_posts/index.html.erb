<div class="container-fluid pb-5">
  <div class="row my-3">
    <div class="col">

      <div class="row ml-2 my-2">
        <h5 class="custom-link-style">会員情報</h5>
      </div>

      <div class="row">
        <div class="col">
          <%= render "public/users/info", user: current_user %>
        </div>
      </div>

      <div class="row">
        <h4 class="mt-3 ml-2">新規投稿</h4>
      </div>

      <div class="row">
        <div class="col">
          <%= render "form", { music_post: @music_post, change_redirect_path: false } %>
        </div>
      </div>
    </div>


    <div class="col-md-8 offset-md-1 mt-3">
        <%= form_with url: genre_search_path, method: :get, local: true do |f| %>
        <div class="d-flex  offset-8 col-lg-4 col-sm-6">
          <%= f.select :keyword, options_for_select([['投稿が新しい順','new'],
                                                     ['投稿が古い順','old'],
                                                     ['いいねの多い順','likes'],
                                                     ['いいねの少ない順','dislikes']],
                                                     params[:keyword]), {}, class: "form-control" %>
          <%= f.submit '検索', class: "submitbtn mx-1" %>
        </div>
        <% end %>


      <div class="mb-5 music_post-index-style">
       <%= render "public/music_posts/index", music_posts: @music_posts %>
      </div>
    </div>
  </div>
</div>
