<div class="container-fluid">
  <div class="row my-3">
    <div class="col">

      <div class="row ml-2 my-2">
        <h5 class="custom-link-style">会員情報</h5>
      </div>

      <div class="row">
        <div class="col">
          <%= render "public/users/info", user: current_user %>
        </div>
      </div>

      <div class="row">
        <h4 class="mt-3 ml-2">新規投稿</h4>
      </div>

      <div class="row">
        <div class="col">
          <%= render "form", { music_post: @music_post, change_redirect_path: false } %>
        </div>
      </div>
    </div>


    <div class="col-md-8 offset-md-1">
      <% form_with model: @music_post, url: genre_search_path, method: :get, local: true do |f| %>
      <%= f.select :keyword, [['投稿が新しい順','new'],
                              ['投稿が古い順','old'],
                              ['いいねの多い順','likes'],
                              ['いいねの少ない順','dislikes']]%>
      <%= f.submit %>
      <% end%>

      <div style="max-width: 600px; margin: auto;">
       <%= render "public/music_posts/index", music_posts: @music_posts %>
      </div>
    </div>
  </div>
</div>
