<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @music_post %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>会員情報</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">新規投稿</h2>
      <%= render 'form', music_post: @music_post %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <% @music_post.each do |post| %>
        <% user = post.user %>
        <div>
          <!--プロフィール画像-->
          <%= image_tag user.profile_image.variant(resize: "50x50"), class: "rounded-circle" if user.profile_image.attached? %>
          <!--ニックネーム-->
          <%= user.nickname %>
        </div>
        <div>
          <!--投稿タイトル-->
          <h3><%= music_post.title %></h3>
          <!--投稿内容-->
          <p><%= music_post.body %></p>
          <!--画像を選択しないと表示されない--
          <% if music_post_image.attached? %>
            <%= image_tag post.image %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
