<% music_posts.each do |music_post| %>
<div class="row">
  <div class="col-2">
    <!-- ユーザーのプロフィール画像 -->
  <%= link_to user_path(music_post.user) do %>
    <%= image_tag music_post.user.get_profile_image, class: "rounded-circle", size:'100x100' %>
    <!--ニックネーム-->
    <div  class="ml-3" style="white-space: nowrap;"><%= music_post.user.nickname %></div>
  <% end %>
  </div>
  <div class="col">
    <!--投稿タイトル-->
    <%= link_to music_post.title, music_post_path(music_post), class: "music_post_#{music_post.id}" %>
    <div style="w-75">
      <!-- 音楽共有投稿の本文 -->
      <%= music_post.body %>
    </div>
  </div>
  <div class="col-1">
    <!-- お気に入りボタン -->
    <div id="favorite_btn_<%= music_post.id %>">
      <%= render partial: 'public/favorites/btn', locals: { current_user: current_user, music_post: music_post } %>
    </div>
  </div>
</div>
<div class="row mb-5">
  <div class="col-9">
    <!--画像設定-->
    <%= image_tag music_post.get_music_post_image, size:'100x100' %>
  </div>
  <div class="col-3 d-flex align-items-end" style="white-space: nowrap;">
    <!--コメントされた回数-->
    <div id="comment_counter">
      <%= render "public/music_post_comments/counter", music_post: music_post %>
    </div>
    <!--投稿日時-->
    <div style="white-space: nowrap;">
      <br><%= music_post.created_at.strftime('%Y/%m/%d %H:%M') %>
    </div>
  </div>
</div>
<% end %>

