<% if music_post.favorited_by?(current_user) %>
  <%= link_to music_post_favorites_path(music_post), method: :delete, remote: true do %>
    <i class="fas fa-heart favorite01" aria-hidden="true"></i>
    <span class="favorite01"><%= music_post.favorites.count %></span>
  <% end %>
<% elsif music_post.favorites.exists? %>
  <%= link_to music_post_favorites_path(music_post), method: :post, remote: true do %>
    <i class="fas fa-heart favorite02" aria-hidden="true"></i>
    <span class="favorite02"><%= music_post.favorites.count %></span>
  <% end %>
<% else %>
  <%= link_to music_post_favorites_path(music_post), method: :post, remote: true do %>
    <i class="fas fa-heart favorite03" aria-hidden="true"></i>
    <%= music_post.favorites.count %>
  <% end %>
<% end %>
