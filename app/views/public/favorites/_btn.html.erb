<% if music_post.favorited_by?(current_user) %>
  <%= link_to music_post_favorites_path(music_post), method: :delete, remote: true do %>
    <i class="fas fa-heart" style="color: red;" aria-hidden="true"></i>
    <span style="color: red;"><%= music_post.favorites.count %></span>
  <% end %>
<% elsif music_post.favorites.exists? %>
  <%= link_to music_post_favorites_path(music_post), method: :post, remote: true do %>
    <i class="fas fa-heart" style="color: black;" aria-hidden="true"></i>
    <span style="color: black;"><%= music_post.favorites.count %></span>
  <% end %>
<% else %>
  <%= link_to music_post_favorites_path(music_post), method: :post, remote: true do %>
    <i class="fas fa-heart" style="color: blue;" aria-hidden="true"></i>
    <%= music_post.favorites.count %>
  <% end %>
<% end %>
